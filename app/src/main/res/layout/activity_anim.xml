<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/image_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level1clicked" />

        <Button
            android:id="@+id/btn_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="旋转消失"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level1clicked" />

        <Button
            android:id="@+id/btn_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="触摸"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level1clicked" />

        <Button
            android:id="@+id/btn_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="完美击中"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level1clicked" />

        <Button
            android:id="@+id/btn_test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="优秀击中"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level1clicked" />

        <Button
            android:id="@+id/btn_test5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="消失"/>
    </LinearLayout>

</LinearLayout>